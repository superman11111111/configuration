syntax on
set noexpandtab
set ai
set number
set hlsearch
set ruler
set smarttab
set list
set listchars=tab:>-
highlight Comment ctermfg=green
autocmd FileType python setlocal tabstop=4 softtabstop=0 expandtab shiftwidth=4
autocmd FileType cfg setlocal tabstop=4 softtabstop=0 expandtab shiftwidth=4
autocmd Filetype cpp setlocal expandtab tabstop=4 shiftwidth=4
